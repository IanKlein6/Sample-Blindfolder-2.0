{
  "name": "sample-blindfolder-2.0",
  "version": "2.0.0",
  "description": "Sample BlindFolder 2.0 - Updated Electron-based app",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"npm run electron-start\"",
    "react-start": "npm start --prefix blindfolder-ui",
    "electron-start": "wait-on http://localhost:3000 && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.sampleblindfolder",
    "productName": "Sample BlindFolder",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "package.json",
      "node_modules/**",
      "blindfolder-ui/build/**"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^23.0.0",
    "electron-builder": "^23.0.0",
    "concurrently": "^6.2.1",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "^5.0.0",
    "electron-is-dev": "^2.0.0",
    "material-ui": "^4.0.0"
  }
}
