{
  "name": "sample-blindfolder-2.0",
  "version": "2.0.0",
  "description": "BlindFolder 2.0 - Updated to Blindfolder 1.0",
  "author": "Ian Klein <ianklein66@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"npm run electron-start\"",
    "build": "react-scripts build",
    "react-start": "npm start --prefix blindfolder-ui",
    "electron-start": "wait-on http://localhost:3000 && electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "electron-pack": "electron-builder"
  },
  "build": {
    "appId": "com.sampleblindfolder.v2",
    "productName": "BlindFolder 2.0",
    "files": [
      "main.js",
      "electron.js",
      "node_modules/**/*",
      "blindfolder-ui/build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "images/icon_v1_Win.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "images/icon_v1_Mac.icns" 
    },
    "linux": {
      "target": "AppImage",
      "icon": "images/icon_v1_linux.png" 
    }
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.24.8",
    "@svgr/webpack": "^8.1.0",
    "concurrently": "^6.2.1",
    "electron": "^23.3.13",
    "electron-builder": "^23.6.0",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "exceljs": "^4.4.0"
  }
}
